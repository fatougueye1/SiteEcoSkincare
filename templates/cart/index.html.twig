{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block content %}

    <h1> Mon panier </h1>
    Retrouver l'ensemble des produits ajouter a votre panier.

    {% if cart|length > 0 %}
        <table class="table mt-3">
        <thead>
            <tr>
            <th scope="col">Produit</th>
            <th scope="col"></th>
            <th scope="col">Quantité</th>
            <th scope="col">Prix</th>
            <th scope="col">Total</th>
            <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
        {% set total = null %}
        {% for product in cart %}
            <tr>
            <th> 
                <img src="/upload/{{ product.product.image }}" alt="{{ product.product.name }}">
            </th>
            <td>{{ product.product.name}} <br/>
                <small>{{ product.product.subtitle}}</small>
            </td>
            <td>
            <a href="{{ path('decrease_to_cart', { 'id' : product.product.id}) }}">
                <img src=" {{ asset('assets/img/signe-moins.png') }}" height="15px" alt="Enlever un produit" >
            </a>    
            {{ product.quantity}}
            <a href="{{ path('add_to_cart', { 'id' : product.product.id}) }}">
                <img src=" {{ asset('assets/img/plus.png') }}" height="15px" alt="Ajouter un produit" >
            </a>
            </td>
            <td>{{ (product.product.price / 100)|number_format(2, ',', '.') }} €</td>
            <td>{{ ((product.product.price * product.quantity) / 100)|number_format(2, ',', '.') }} €</td>
            <td> 
            <a href="{{ path('delete_to_cart', { 'id' : product.product.id}) }}">
                Effacer
            </a>
            </td>

            </tr>
            {% set total = total + (product.product.price * product.quantity) %}
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <b>Nombre de produit :</b>{{ cart | length}}</b>
            <b>Total de mon panier :</b> {{ (total / 100)|number_format(2, ',', '.') }} €
            <a href="" class="btn btn-success btn btn-block">Valider mon panier</a>
        </div>
    {% else %}
    <hr>
    <p><b> Votre panier est vide </b></p>
    {% endif %}
{% endblock %}
